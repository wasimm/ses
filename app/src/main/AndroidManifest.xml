<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.aku.hassannaqvi.ses">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. -->
    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.hardware.location.gps" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- TakePhoto Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="edu.aku.hassannaqvi.ses.core.MainApp"
        android:allowBackup="false"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:logo="@drawable/app_icon"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup">


        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.list_activity.FormsReportCluster"
            android:label="Forms Report"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeEnglish" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.list_activity.FormsReportDate"
            android:label="Forms Report"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeEnglish" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.list_activity.PendingFormsActivity"
            android:label="Unfinished Forms"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeEnglish" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.other.SplashscreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.other.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeEnglish" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.other.MainActivity"
            android:theme="@style/AppThemeEnglish" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.sections.SectionMAActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeUrdu" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.sections.SectionMPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeUrdu" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.other.EndingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeUrdu" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.core.AndroidDatabaseManager"
            android:parentActivityName="edu.aku.hassannaqvi.ses.ui.other.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.other.SyncActivity"
            android:parentActivityName="edu.aku.hassannaqvi.ses.ui.other.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeEnglish" />

        <activity
            android:name="edu.aku.hassannaqvi.ses.ui.other.TakePhoto"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"

            android:theme="@style/AppTheme" />

        <service android:name="edu.aku.hassannaqvi.ses.utils.DownloadFileService" />
    </application>

</manifest>